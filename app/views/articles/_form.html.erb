<%= form_for(@article, html: {multipart: true}) do |f| %>
    <%-# formfor=help meth, takes 1 param(article)&block w form fields -%>
    <%-#"make form for obj @art, call if f&add following elements" -%>
        <ul>
        <% @article.errors.full_messages.each do |error| %>
            <li><%= error %></li>
        <% end %>
        </ul>
        <p>
            <%= f.label :title %><br />
    <%# f.label=helper makes html label. good usability prac -%>
            <%= f.text_field :title %>
    <%# f.tF=hlpr creates single line text box namd "title" -%>
        </p>
        <p>
            <%= f.label :body %><br />
            <%= f.text_area :body %>
    <%#f.tA=helper makes multi line text box name "body" -%>
        </p>
        <p>
        <%= f.label :tag_list %><br />
        <%= f.text_field :tag_list %>
    </p>
        <p>
            <%= f.label :image, "Attach an Image" %><br />
            <%= f.file_field :image %>
        </p>
        <p>
            <% if @article.image.exists? %>
                <%= image_tag @article.image.url %><br/>
            <% end %>
            <%= f.label :image, "Attach a New Image" %><br />
            <%= f.file_field :image %>
        </p>
        <p>
            <%= f.submit %>
    <%# hlpr makes btn called "create" -%>
        </p>
    <% end %>